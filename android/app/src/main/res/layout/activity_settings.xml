<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0d1117">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clay Server Address"
        android:textSize="16sp"
        android:textColor="#e6edf3" />

    <EditText
        android:id="@+id/serverHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="hostname or IP address"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:textColor="#e6edf3"
        android:textColorHint="#8b949e"
        android:backgroundTint="#3fb950" />

    <EditText
        android:id="@+id/serverPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="port (e.g., 9001)"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:textColor="#e6edf3"
        android:textColorHint="#8b949e"
        android:backgroundTint="#3fb950" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Use Secure Connection (HTTPS/WSS)"
            android:textSize="14sp"
            android:textColor="#e6edf3" />

        <Switch
            android:id="@+id/secureSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:thumbTint="#3fb950"
            android:trackTint="#8b949e" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="#30363d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authentication (optional)"
        android:textSize="16sp"
        android:textColor="#e6edf3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave blank to enter credentials on connect"
        android:textSize="12sp"
        android:textColor="#8b949e"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/serverUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username (for multiuser mode)"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:textColor="#e6edf3"
        android:textColorHint="#8b949e"
        android:backgroundTint="#3fb950" />

    <EditText
        android:id="@+id/serverPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:textColor="#e6edf3"
        android:textColorHint="#8b949e"
        android:backgroundTint="#3fb950" />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#f85149"
        android:visibility="gone" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3fb950"
        android:textColor="#000000" />

</LinearLayout>
